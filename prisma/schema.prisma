// datasource db defines the database connection details.
// provider "postgresql" indicates we are using a PostgreSQL database.
datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// generator client tells Prisma to generate the Prisma Client based on this schema.
generator client {
  provider = "prisma-client-js"
}

// Model for Check-in records (入住紀錄)
model CheckInRecord {
  id               String    @id @default(cuid())
  checkInDate      DateTime  @map("check_in_date")
  checkOutDate     DateTime  @map("check_out_date")
  numberOfPeople   Int       @map("number_of_people")
  numberOfRooms    Int       @map("number_of_rooms")
  numberOfNights   Int       @map("number_of_nights")
  numberOfHolidays Int       @map("number_of_holidays")
  notes            String?

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("check_in_records")
}

// Model for Income records (收入表)
model Income {
  id     String   @id @default(cuid())
  date   DateTime
  item   String
  amount Decimal  // Using Decimal for precise financial calculations
  type   String   // e.g., "Booking", "Late check-out fee", "Other"
  notes  String?

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("income_records")
}

// Model for Expense records (支出表)
model Expense {
  id        String   @id @default(cuid())
  date      DateTime
  category  String   // e.g., "Laundry", "Platform Commission", "Utilities", "Maintenance"
  amount    Decimal  // Using Decimal for precise financial calculations
  notes     String?
  extraNotes String?  @map("extra_notes") // Corresponds to your 'note2'

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("expense_records")
}

// Model for Laundry records (送洗紀錄)
model LaundryRecord {
  id            String    @id @default(cuid())
  deliveryDate  DateTime  @map("delivery_date")
  retrievalDate DateTime? @map("retrieval_date") // Optional, as it might be updated later

  // The individual item counts
  duvetCovers Int @default(0) @map("duvet_covers")
  bedSheets   Int @default(0) @map("bed_sheets")
  pillowcases Int @default(0)
  largeTowels Int @default(0) @map("large_towels")
  smallTowels Int @default(0) @map("small_towels")

  notes String?

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("laundry_records")
}

model Account {
  id                 String  @id @default(cuid())
  userId             String  @map("user_id")
  type               String
  provider           String
  providerAccountId  String  @map("provider_account_id")
  refresh_token      String? @db.Text
  access_token       String? @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String? @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime? @map("email_verified")
  password      String?
  image         String?
  accounts      Account[]
  sessions      Session[]

  @@map("users")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}